generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Movie {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  imageString   String
  title         String
  ageRating     Int // Consider renaming for clarity
  duration      Int // Use Int if dealing with whole numbers
  overview      String
  release       Int
  videoSource   String
  category      String
  youtubeString String
  Bookmarks     Bookmark[] @relation("MovieBookmark")

  createdAt DateTime @default(now())
}

model Bookmark {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String

  movieId String? @db.ObjectId
  Movie   Movie?  @relation(fields: [movieId], references: [id], name: "MovieBookmark")
}

model Testimonials {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  emailID   String?
  avatar    String
  rating    Float
  remark    String 
  createdAt DateTime @default(now())
}
